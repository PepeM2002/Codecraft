---
// Propiedades de la card
interface Props {
  title: string;
  body: string;
  href: string;
  imgSrc: string;
}

const { href, title, body, imgSrc } = Astro.props;
---

<div class="container">
  <li class="card">
    <a href={href}>
      <div class="face face1">
        <div class="content">
          <img src={imgSrc} alt={title} />
          <h3>{title}</h3>
        </div>
      </div>
      <div class="face face2">
        <div class="content">
          <p>{body}</p>
          <a href={href}>Learn More</a>
        </div>
      </div>
    </a>
  </li>
</div>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    padding: 20px;
  }

  .card {
    position: relative;
    width: 300px;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
    border-radius: 15px;
    overflow: hidden;
  }

  .card:hover {
    transform: scale(1.05);
  }

  .face {
    width: 100%;
    height: 200px;
    transition: 0.5s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .face1 {
    background: #333;
    transform: translateY(100px);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    color: white;
  }

  .card:hover .face1 {
    background: #001aff;
    transform: translateY(0);
  }

  .face1 .content {
    opacity: 0.2;
    transition: opacity 0.5s ease-in-out;
    text-align: center;
  }

  .card:hover .face1 .content {
    opacity: 1;
  }

  .face1 .content img {
    max-width: 100px;
    border-radius: 50%;
  }

  .face1 .content h3 {
    margin-top: 10px;
    color: #fff;
    font-size: 1.5em;
  }

  .face2 {
    background: #fff;
    padding: 20px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.8);
    transform: translateY(-100px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-radius: 0 0 15px 15px;
  }

  .card:hover .face2 {
    transform: translateY(0);
  }

  .face2 .content p {
    margin: 0;
    padding: 0;
    color: #333;
  }

  .face2 .content a {
    margin: 15px 0 0;
    display: inline-block;
    text-decoration: none;
    font-weight: 900;
    color: #535252;
    padding: 5px;
    border: 1px solid #1c6eb1;
    border-radius: 5px;
    transition:
      background 0.3s ease,
      color 0.3s ease;
  }

  .face2 .content a:hover {
    background: #0468aa;
    color: #fff;
  }
</style>
